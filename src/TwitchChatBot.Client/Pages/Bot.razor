@page "/bot"

<h3>Bot</h3>

<div class="bot">
    <div class="row">
        <p>Password Last Updated: @UpdatedPasswordTime.ToString("f")</p> 
    </div>
    <div class="row">
        <label for="passwordText">Password: </label>
        <input type="password"  id="passwordText" @bind="PasswordText" />
    </div>
    <div class="row mt-2">
        <button class="btn btn-primary mr-2" @onclick="UpdatePassword">Update</button>
        <button class="btn  btn-secondary" @onclick="ClearPassword">Clear</button>
    </div>
</div>